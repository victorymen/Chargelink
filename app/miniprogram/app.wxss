page{
	background-color: #f0f0f0; 
	/* padding: 10px; */
	box-sizing: border-box;

/*  	padding-bottom: 10px;  与 van-tabbar 高度一致 */
  /* 确保内容不足时也能撑开高度 */
  	box-sizing: border-box; /* 防止 padding 导致溢出 */
}


  .custom-navbar {
	position: fixed;  /* 关键属性 */
	top: 0;
	left: 0;
	right: 0;
	z-index: 999;     /* 确保在页面内容之上 */
	background: #ffffff; /* 导航栏背景色 */
	box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1); /* 可选阴影 */
  }
  .nav-content {
	height: 44px;     /* 导航栏内容区固定高度 */
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 20rpx;
  }
  .nav-btn {
	width: 40rpx;
	height: 40rpx;
  }
  .nav-title {
	font-size: 16px;
	font-weight: bold;
	max-width: 60vw;    /* 防止标题过长 */
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
  }
  
  /* 页面内容区 */
  .page-content {
	box-sizing: border-box;
	min-height: 100vh;
	background: #f5f5f5; /* 页面背景色 */
  }
  
  
  .navbar-title {
	font-size: 16px;
	font-weight: bold;
  }